# Wavelength Lore Environment Configuration
# Copy this file to .env and configure with your values

# === Firebase Configuration ===
# Main Firebase project settings - used throughout the application
API_KEY=your_firebase_api_key_here
AUTH_DOMAIN=your_project_id.firebaseapp.com
DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com
PROJECT_ID=your_project_id
STORAGE_BUCKET=your_project_id.firebasestorage.app
MESSAGING_SENDER_ID=your_messaging_sender_id
APP_ID=your_app_id
MEASUREMENT_ID=your_measurement_id

# Legacy Firebase naming (for backwards compatibility)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id

# === AWS Configuration ===
# Main AWS credentials (used for backups and file uploads)
ACCESS_KEY_ID=your-aws-access-key-id
SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Admin AWS credentials (for forum file attachments)
AWS_ACCESS_KEY_ADMIN=your-admin-aws-access-key-id
AWS_SECRET_ACCESS_KEY_ADMIN=your-admin-aws-secret-access-key

# === Database Backup Configuration ===
# Enable/disable backup system
ENABLE_BACKUPS=true

# S3 Configuration for backups
BACKUP_S3_BUCKET=wavelength-lore-backups
BACKUP_S3_REGION=us-east-1

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=generate-a-64-character-hex-key-here

# Backup Schedule (Cron format)
BACKUP_DAILY_TIME=0 2 * * *     # 2 AM daily
BACKUP_WEEKLY_TIME=0 3 * * 0    # 3 AM Sunday

# Local temp directory for backup processing
BACKUP_TEMP_DIR=./temp/backups

# === Application Configuration ===
CDN_URL=
VERSION=1.0.0
SITE_URL=http://localhost:3001
PORT=3001

# === YouTube API ===
YOUTUBE_API_KEY=your_youtube_api_key_here

# === Admin Authentication ===
ADMIN_SECRET_KEY=your-secret-admin-key-here
ADMIN_ALLOWED_IPS=127.0.0.1,::1,your-admin-ip-address

# === Security Configuration ===
# Rate limiting settings
RATE_LIMIT_WINDOW=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100     # Max requests per window

# Input sanitization settings
SANITIZATION_ENABLED=true
PROFANITY_FILTER_ENABLED=true

# === Forum File Attachments ===
# S3 bucket for forum file uploads
FORUM_ATTACHMENTS_BUCKET=wavelength-forum-attachments

# File upload limits
MAX_FILE_SIZE=1048576           # 1MB in bytes
MAX_FILES_PER_POST=5

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,txt,md,pdf