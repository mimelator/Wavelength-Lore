<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/lore_styles.css">
    <link rel="stylesheet" href="/css/modal_styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <nav class="lore-navigation-top">
        <% if (previousLore) { %>
            <a href="/lore/<%= previousLore.id %>" class="nav-link prev">
                <img src="<%= previousLore.image %>" alt="<%= previousLore.title %>" class="nav-image tiny">
                <span class="nav-text">&laquo; <%= previousLore.title %></span>
            </a>
        <% } %>
        <% if (nextLore) { %>
            <a href="/lore/<%= nextLore.id %>" class="nav-link next">
                <img src="<%= nextLore.image %>" alt="<%= nextLore.title %>" class="nav-image tiny">
                <span class="nav-text"><%= nextLore.title %> &raquo;</span>
            </a>
        <% } %>
    </nav>

    <main>
        <h1><%= lore.title %></h1>
        <% if (lore.type) { %>
            <div class="lore-type-badge">
                <span class="type-<%= lore.type %>"><%= lore.type.charAt(0).toUpperCase() + lore.type.slice(1) %></span>
            </div>
        <% } %>
        
        <section class="lore-banner" style="background-image: url('<%= lore.image %>');">
            
        </section>

        <section class="lore-description">
            <p><%- linkifyCharacters(linkifyLore(lore.description)) %></p>
        </section>

        <section class="lore-connections">
            <h3>Related Lore</h3>
            <p>Explore other places, things, and concepts from the Wavelength universe:</p>
            <div class="lore-links">
                <% allLore.filter(l => l.id !== lore.id).forEach(otherLore => { %>
                    <a href="<%= otherLore.url %>" class="lore-connection-link type-<%= otherLore.type %>">
                        <span class="lore-type"><%= otherLore.type %></span>
                        <%= otherLore.name %>
                    </a>
                <% }); %>
            </div>
        </section>

        <% if (lore.image_gallery && lore.image_gallery.length > 0) { %>
        <section class="lore-carousel">
            <div class="carousel">
                <% const shuffledImages = lore.image_gallery.sort(() => Math.random() - 0.5); %>
                <% shuffledImages.forEach((image, index) => { %>
                    <div class="carousel-item" data-index="<%= index %>">
                        <img src="<%= image %>" alt="<%= lore.title %>" class="gallery-image" data-fullsize="<%= image %>">
                    </div>
                <% }); %>
            </div>
            <div class="carousel-dots">
                <% shuffledImages.forEach((_, index) => { %>
                    <span class="dot" data-index="<%= index %>"></span>
                <% }); %>
            </div>
        </section>
        <% } %>

        <div id="imageModal" class="modal">
            <span class="modal-close">&times;</span>
            <img class="modal-content" id="fullSizeImage">
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const modal = document.getElementById('imageModal');
                const modalImg = document.getElementById('fullSizeImage');
                const closeModal = document.querySelector('.modal-close');

                document.querySelectorAll('.gallery-image').forEach(image => {
                    image.addEventListener('click', () => {
                        modal.style.display = 'block';
                        modalImg.src = image.dataset.fullsize;
                    });
                });

                closeModal.addEventListener('click', () => {
                    modal.style.display = 'none';
                });

                modal.addEventListener('click', (event) => {
                    if (event.target === modal) {
                        modal.style.display = 'none';
                    }
                });
            });
        </script>
    </main>

    <%- include('partials/footer') %>
</body>
</html>